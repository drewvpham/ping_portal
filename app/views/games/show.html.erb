<nav>
    <div class="nav-wrapper blue">
      <ul id="nav-mobile" class="right hide-on-med-and-down">
        <li><a href="/games/new">Schedule a new game</a></li>
        <li><a href="/messages">Send a Message</a></li>
        <li><a href="/">Home</a></li>
        <li><a href="/sessions/<%= @current_user_id %>" data-method="delete">Logout</a></li>
      </ul>
    </div>
  </nav>

<div class="game_details">
	<h1> <%= @game.player_1.username %> Vs <%= @game.player_2.username %> </h1>
	<h5> Location: <%= @game.location %> </h5>
	<h5> Time: <%= @game.time %></h5>
	<% if @game.winner %>
		<p> winner: <%= @game.winner.username %></p>
	<% end %>
	<% if @game.player_1_score > 0 %>
		<p> <%= @game.player_1_score %></p>
	<%end%>
	<%if @game.player_2_score > 0%>
		<p> <%= @game.player_2_score %></p>
	<%end%>
<div>

<h3>Report the score for this game:</h3>
<!-- game.edit function -->
<form action="/games/<%= @game.id %>" method="post">
	<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
	<input type="hidden" name="_method" value="patch">
	<label> <%= @game.player_1.username %> Score: </label>
		<input type="number" name="game[player_1_score]">
	<label> <%= @game.player_2.username %> Score</label>
		<input type="number" name="game[player_2_score]">
	<input type="submit" value="Submit Score">
</form>
