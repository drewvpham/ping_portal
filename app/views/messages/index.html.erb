
<%=link_to 'Home', home_path%>
<a href="/sessions/<%= @current_user_id %>" data-method="delete">Logout</a>

<div></div>
  <h3>Your Messages </h3>
<%@private_messages.each do |message|%>
  <p><%=message.user.username%> says <%=message.content%> to <%=message.recipient.username%> on <%=message.created_at.strftime("%b %e, %l:%M %p")%>
    <%= link_to 'Delete',  { action: :destroy, id: message.id }, method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<%end%>


<h3>Leave a new message:</h3>
   <form action='/messages' method='post'>
     <input type='hidden' name='authenticity_token' value="<%=form_authenticity_token%>">
     <input type='hidden' name='message[private]' value="true">
     <div>
       <textarea rows="4" cols="50" name='message[content]'></textarea>
     </div>

     <label>Please select a recipient</label>
     <select name="message[recipient_id]">
       <%@users.each do |user|%>
        <%if user.id !=session[:user_id]%>
          <option value="<%=user.id%>"><%=user.username%></option>
        <%end%>
      <%end%>

    </select>



     <input type='submit' value='Submit'>
   </form>
